<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorSemiAlpha"
    android:onClick="nothing"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_padding"
        android:layout_marginBottom="@dimen/base_padding"
        android:layout_marginRight="@dimen/base_padding_4x"
        android:layout_marginLeft="@dimen/base_padding_4x">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/base_padding_4x"
            android:paddingTop="@dimen/base_padding_2x"
            android:paddingRight="@dimen/base_padding_4x"
            android:paddingBottom="@dimen/base_padding_2x">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/register_successful"
                android:id="@+id/textView3"
                style="@style/Text.Large"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="30dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ok"
                    android:layout_gravity="right"
                    android:id="@+id/btn_ok" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>