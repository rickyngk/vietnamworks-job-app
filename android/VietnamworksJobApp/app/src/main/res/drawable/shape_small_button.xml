<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#50000000" />
            <corners android:bottomRightRadius="@dimen/button_small_corner"
                android:bottomLeftRadius="@dimen/button_small_corner"
                android:topRightRadius="@dimen/button_small_corner"
                android:topLeftRadius="@dimen/button_small_corner"/>
            <size android:height="@dimen/button_small_height"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#30000000" />
            <corners android:bottomRightRadius="@dimen/button_small_corner"
                android:bottomLeftRadius="@dimen/button_small_corner"
                android:topRightRadius="@dimen/button_small_corner"
                android:topLeftRadius="@dimen/button_small_corner"/>
            <size android:height="@dimen/button_small_height"/>
        </shape>
    </item>
</selector>