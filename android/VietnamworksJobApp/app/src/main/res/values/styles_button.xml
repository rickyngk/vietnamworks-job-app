<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundButton.Basic">
        <item name="android:minWidth">80dp</item>
        <item name="android:background">@drawable/shape_small_button</item>
        <item name="android:textColor">@color/textColorDark</item>
    </style>

    <style name="RoundButton.Light" parent="RoundButton.Basic">
        <item name="android:background">@drawable/shape_small_button_light</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="RoundButton.CTA" parent="RoundButton.Basic">
        <item name="android:background">@drawable/shape_small_button_cta</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="RoundButton.Large" parent="RoundButton.Basic">
        <item name="android:background">@drawable/shape_rounded_button</item>
        <item name="android:textColor">@color/textColorDark</item>
        <item name="android:textSize">@dimen/font_m</item>
    </style>

    <style name="RoundButton.Large.CTA" parent="RoundButton.Large">
        <item name="android:background">@drawable/shape_button_cta</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="RoundButton.Large.CTA.Line" parent="RoundButton.Large">
        <item name="android:background">@drawable/shape_button_cta_line</item>
        <item name="android:textColor">@color/textColorWarning</item>
    </style>

    <style name="RoundButton.Large.Primary" parent="RoundButton.Large">
        <item name="android:background">@drawable/shape_button_primary</item>
        <item name="android:textColor">@color/textColorLight</item>
    </style>

    <style name="RoundButton.Large.Primary.Line" parent="RoundButton.Large">
        <item name="android:background">@drawable/shape_button_primary_line</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
</resources>